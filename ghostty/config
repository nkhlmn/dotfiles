theme = dark:Kanagawa Dragon,light:neobones_light

# disable ligatures
font-feature = -calt
font-size = 15

macos-titlebar-style = tabs

keybind = super+shift+z=toggle_split_zoom
keybind = opt+space>opt+z=toggle_split_zoom

keybind = opt+space>opt+s=new_split:down
keybind = opt+space>opt+v=new_split:right

keybind = opt+space>opt+k=goto_split:top
keybind = opt+space>opt+j=goto_split:bottom
keybind = opt+space>opt+h=goto_split:left
keybind = opt+space>opt+l=goto_split:right

keybind = opt+space>opt+space=toggle_quick_terminal
keybind = global:shift+opt+space=toggle_quick_terminal

keybind = opt+space>opt+w=close_window


keybind = ctrl+shift+h=resize_split:left,10
keybind = ctrl+shift+l=resize_split:right,10
keybind = ctrl+shift+k=resize_split:up,10
keybind = ctrl+shift+j=resize_split:down,10
keybind = ctrl+shift+equal=equalize_splits

