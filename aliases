alias als="nv ~/.aliases"

alias nrc="nv -c 'cd ~/.config/nvim/' ~/.config/nvim/init.lua"
alias arc="nv -c 'cd ~/.config/alacritty/' ~/.config/alacritty/alacritty.yml"
alias trc="nv ~/.tmux.conf"
alias wrc="nv ~/.wezterm.lua"
alias vrc="vi ~/.vimrc"
alias zrc="nv ~/.zshrc"

alias l="exa -a --icons --git --group-directories-first --oneline"
alias ls="exa -laB --icons --git --group-directories-first"
alias lt="exa --tree --level=2 --icons --git --git-ignore"

alias tman="tldr"
alias mant="tldr"

alias top="btm"

alias soz="source ~/.zshrc && echo 'Sourced .zshrc'"

alias nv="nvim"
alias nvps="nvim -c PackerSync"
alias cnv="cd ~/.config/nvim"

alias python="python3"

alias cat=bat

alias g="git"
alias ga="git add"
alias gc="git commit"
alias gs="git status"
alias gst="git status"
alias gd="git diff"
alias gdt="git difftool"
alias gsh="git show"
alias gl="git log"
alias glo="git log"
alias lg="lazygit"

alias tm="tmux attach || tmux"
alias tmn="tmux new"
